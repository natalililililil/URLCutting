@model URLCutting.Models.ShortUrl

@{
    ViewData["Title"] = "Редактировать ссылку";
}

<h2>Редактировать ссылку</h2>

<form asp-action="Edit" asp-controller="Home" method="post">
    <input type="hidden" asp-for="Id" />

    <div>
        <label>Длинный URL:</label><br />
        <input asp-for="OriginalUrl" style="width: 400px;" />
    </div>

    <div>
        <label>Короткий код (ShortCode):</label><br />
        <input asp-for="ShortCode" style="width: 200px;" />
    </div>

    <br />
    <button type="submit">Сохранить</button>
    <a asp-action="Index">Отмена</a>
</form>

<br />

<form asp-action="Delete" asp-controller="Home" asp-route-id="@Model.Id" method="post" onsubmit="return confirm('Точно удалить ссылку?');">
    <button type="submit" style="color:red;">Удалить ссылку</button>
</form>
